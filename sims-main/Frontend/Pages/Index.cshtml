@page "/"

@model SIMS_Frontend.Pages.IndexModel
@Html.AntiForgeryToken()
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SIMS Login</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="../../dist/css/adminlte.min.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a class="h1"><b>SIMS</b>Dashboard</a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Sign in to start your session</p>
                

                <form method="post">
                    @Html.AntiForgeryToken()
                    <div class="input-group mb-3 has-validation">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <span class="fas fa-user"></span>
                            </div>
                        </div>
                        @if (Model.FailedLogin)
                        {
                            <input type="text" class="form-control is-invalid" id="valUsername" asp-for="Username" name="Username" placeholder="Username">
                            <div id="valUsername" class="invalid-feedback">
                                Wrong Username or Password
                            </div>
                        }
                        else
                        {
                            <input type="text" class="form-control" asp-for="Username" name="Username" placeholder="Username">

                        }

                    </div>
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                            <div class="input-group-text">
                                <span class="fas fa-lock"></span>
                            </div>
                        </div>
                        @if (Model.FailedLogin)
                        {


                            <input type="password" class="form-control is-invalid" id="valPassword" asp-for="Password" name="Password" placeholder="Password">
                            <div id="valPassword" class="invalid-feedback">
                                Wrong Username or Password
                            </div>
                        }
                        else
                        {
                            <input type="password" class="form-control" asp-for="Password" name="Password" placeholder="Password">

                        }

                    </div>
                    <div class="row">
                        <div class="col-8">
                            <div class="icheck-primary">
                                <input type="checkbox" id="remember">
                                <label for="remember">
                                    Remember Me
                                </label>
                            </div>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
</body>
</html>

